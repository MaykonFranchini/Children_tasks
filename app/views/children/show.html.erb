<h2>Welcome, <%= @child.first_name %></h2>

<div>
  <h3>Balance</h3><strong>£<% @child.account.each do |account| %>
  <%= account.balance %>
  <% end %></strong>
</div>

<a href='' id='transactionLink' class="btn btn-primary">New transaction</a>
<div id="transactionForm">
  <%= render 'shared/transaction_form', transaction: @transaction %>
</div>

<table id="transactions">
  <tr>
    <th>Date</th>
    <th>Type</th>
    <th>Description</th>
    <th>Amount</th>
  </tr>
  <% @child.transactions.each  do |transaction| %>
    <tr class=<%=transaction.transaction_type%>>
      <td><%= Date.parse(transaction.created_at.to_formatted_s).strftime('%d %b %Y') %></td>
      <td><%= transaction.transaction_type %></td>
      <td><%= transaction.description %></td>
      <td>£<%= transaction.amount %></td>
    </tr>
<% end %>

</table>
